{
  "name": "portfolio",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "build": "astro check && astro build",
    "preview": "astro preview --port 4329",
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.mjs,.cjs,.astro",
    "a11y:test": "node ./scripts/a11y/run.js"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.5",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.39.1",
    "@tailwindcss/vite": "^4.1.17",
    "astro": "^5.15.4",
    "astro-eslint-parser": "^1.2.2",
    "axe-core": "^4.11.0",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-astro": "^1.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "puppeteer": "^24.29.1",
    "tailwindcss": "^4.1.17"
  },
  "lint-staged": {
    "*.{js,mjs,cjs,astro}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
