---
import Layout from '../layouts/main.astro';

const title = 'Contact - Corey Burns';
const description = 'Get in touch with Corey Burns for collaboration opportunities or inquiries.';
---

<Layout title={title} description={description}>
  <section
    class="py-16"
    style="background-color: rgb(var(--color-bg-primary)); color: rgb(var(--color-text-primary));"
  >
    <div class="mx-auto max-w-4xl px-4 sm:px-6 lg:px-8">
      <h1
        class="mb-8 text-center text-4xl font-bold"
        style="color: rgb(var(--color-text-primary));"
      >
        Get In Touch
      </h1>

      <div class="grid grid-cols-1 gap-12 md:grid-cols-2">
        <!-- Contact Info -->
        <div>
          <h2 class="mb-6 text-2xl font-semibold" style="color: rgb(var(--color-text-primary));">
            Contact Information
          </h2>
          <div class="space-y-4">
            <div class="flex items-center">
              <svg
                class="mr-3 h-5 w-5"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                style="color: rgb(var(--color-text-muted));"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                >
                </path>
              </svg>
              <span style="color: rgb(var(--color-text-secondary));">corey@example.com</span>
            </div>
            <div class="flex items-center">
              <svg
                class="mr-3 h-5 w-5"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                style="color: rgb(var(--color-text-muted));"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                >
                </path>
              </svg>
              <span style="color: rgb(var(--color-text-secondary));">(555) 123-4567</span>
            </div>
            <div class="flex items-center">
              <svg
                class="mr-3 h-5 w-5"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                style="color: rgb(var(--color-text-muted));"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                >
                </path>
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
                >
                </path>
              </svg>
              <span style="color: rgb(var(--color-text-secondary));">K-W, Ontario</span>
            </div>
          </div>
        </div>

        <!-- Contact Form -->
        <div>
          <h2 class="mb-6 text-2xl font-semibold" style="color: rgb(var(--color-text-primary));">
            Send a Message
          </h2>
          <form class="space-y-6">
            <div>
              <label
                for="name"
                class="block text-sm font-medium"
                style="color: rgb(var(--color-text-secondary));"
              >
                Name
              </label>
              <input
                type="text"
                id="name"
                name="name"
                class="mt-1 block w-full rounded-md border px-3 py-2 shadow-sm focus:outline-none"
                style="border-color: rgb(var(--color-border)); background-color: rgb(var(--color-bg-secondary)); color: rgb(var(--color-text-primary));"
              />
            </div>
            <div>
              <label
                for="email"
                class="block text-sm font-medium"
                style="color: rgb(var(--color-text-secondary));"
              >
                Email
              </label>
              <input
                type="email"
                id="email"
                name="email"
                class="mt-1 block w-full rounded-md border px-3 py-2 shadow-sm focus:outline-none"
                style="border-color: rgb(var(--color-border)); background-color: rgb(var(--color-bg-secondary)); color: rgb(var(--color-text-primary));"
              />
            </div>
            <div>
              <label
                for="message"
                class="block text-sm font-medium"
                style="color: rgb(var(--color-text-secondary));"
              >
                Message
              </label>
              <textarea
                id="message"
                name="message"
                rows="4"
                class="mt-1 block w-full rounded-md border px-3 py-2 shadow-sm focus:outline-none"
                style="border-color: rgb(var(--color-border)); background-color: rgb(var(--color-bg-secondary)); color: rgb(var(--color-text-primary));"
              >
              </textarea>
            </div>
            <button
              type="submit"
              class="w-full rounded-md px-4 py-2 focus:outline-none"
              style="background-color: rgb(var(--color-accent)); color: #fff;"
            >
              Send Message
            </button>
          </form>
        </div>
      </div>
    </div>
  </section>
</Layout>
