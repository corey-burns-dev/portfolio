---
import Layout from '@layouts/main.astro';
import photo from '../assets/photo.jpg';
---

<Layout
  title="Corey Burns - Portfolio"
  description="Welcome to my portfolio. Full Stack Developer."
>
  <section
    class="relative flex min-h-screen items-center"
    style="background-color: rgb(var(--color-bg-primary)); color: rgb(var(--color-text-primary));"
  >
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 items-center gap-12 lg:grid-cols-2">
        <!-- Text Content -->
        <div class="text-center lg:text-left">
          <h2 class="mb-6 text-2xl font-bold" style="color: rgb(var(--color-text-primary));">
            Hello, I'm
          </h2>
          <h1
            class="mb-6 text-5xl font-extrabold sm:text-6xl lg:text-7xl"
            style="color: rgb(var(--color-text-primary));"
          >
            COREY BURNS
          </h1>
          <p class="mb-8 text-xl sm:text-2xl" style="color: rgb(var(--color-text-secondary));">
            I am a Full Stack Developer
          </p>
          <div class="flex flex-col justify-center gap-4 sm:flex-row lg:justify-start">
            <a
              href="/contact"
              class="rounded-full px-8 py-3 font-semibold transition-colors"
              style="background-color: #b6f5d8; color: #1a3c34; border: 2px solid #b6f5d8;"
            >
              Contact Me
            </a>
            <a
              href="#"
              class="rounded-full px-8 py-3 font-semibold transition-colors"
              style="background-color: #ffe7b2; color: #7a5c1e; border: 2px solid #ffe7b2;"
            >
              Buy me a Coffee
            </a>
          </div>
        </div>
        <!-- Image -->
        <div class="flex justify-center lg:justify-end">
          <div class="relative">
            <img
              src={photo.src}
              alt="Muhammad Fiaz"
              class="relative h-80 w-80 rounded-xl border-4 object-cover shadow-2xl lg:h-96 lg:w-96"
              style="border-color: #fff; transform: rotate(-4deg);"
            />
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
