---
import Layout from '../layouts/main.astro';

const title = 'Projects - Corey Burns';
const description =
  'Discover the projects and work of Corey Burns, showcasing full-stack development expertise.';
---

<Layout title={title} description={description}>
  <section
    class="py-16"
    style="background-color: rgb(var(--color-bg-primary)); color: rgb(var(--color-text-primary));"
  >
    <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
      <h1
        class="mb-12 text-center text-4xl font-bold"
        style="color: rgb(var(--color-text-primary));"
      >
        My Projects
      </h1>

      <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
        <!-- Project 1 -->
        <div
          class="overflow-hidden rounded-lg shadow-md"
          style="background-color: rgb(var(--color-bg-secondary));"
        >
          <div class="p-6">
            <h3 class="mb-2 text-xl font-semibold" style="color: rgb(var(--color-text-primary));">
              Portfolio Website
            </h3>
            <p class="mb-4" style="color: rgb(var(--color-text-secondary));">
              A responsive portfolio built with Astro and Tailwind CSS, featuring dark mode and
              optimized performance.
            </p>
            <div class="mb-4 flex flex-wrap gap-2">
              <span class="badge-accent">Astro</span>
              <span class="badge-accent-hover">Tailwind</span>
            </div>
            <a href="#" class="link-accent">View Project →</a>
          </div>
        </div>

        <!-- Project 2 -->
        <div
          class="overflow-hidden rounded-lg shadow-md"
          style="background-color: rgb(var(--color-bg-secondary));"
        >
          <div class="p-6">
            <h3 class="mb-2 text-xl font-semibold" style="color: rgb(var(--color-text-primary));">
              E-commerce Platform
            </h3>
            <p class="mb-4" style="color: rgb(var(--color-text-secondary));">
              Full-stack e-commerce solution with React frontend and Node.js backend, including
              payment integration.
            </p>
            <div class="mb-4 flex flex-wrap gap-2">
              <span class="badge-accent">React</span>
              <span class="badge-accent-hover">Node.js</span>
            </div>
            <a href="#" class="link-accent">View Project →</a>
          </div>
        </div>

        <!-- Project 3 -->
        <div
          class="overflow-hidden rounded-lg shadow-md"
          style="background-color: rgb(var(--color-bg-secondary));"
        >
          <div class="p-6">
            <h3 class="mb-2 text-xl font-semibold" style="color: rgb(var(--color-text-primary));">
              Task Management App
            </h3>
            <p class="mb-4" style="color: rgb(var(--color-text-secondary));">
              Collaborative task management tool with real-time updates, built using modern web
              technologies.
            </p>
            <div class="mb-4 flex flex-wrap gap-2">
              <span class="badge-accent">Vue.js</span>
              <span class="badge-accent-hover">Firebase</span>
            </div>
            <a href="#" class="link-accent">View Project →</a>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
