---
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import SquareLines from '../components/square-lines.astro';
import '../styles/global.css';
import '../styles/fonts.css';
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <script is:inline>
      (function () {
        const root = document.documentElement;

        function setTheme(isDark) {
          if (isDark) root.classList.add('dark');
          else root.classList.remove('dark');
        }

        try {
          const stored = localStorage.getItem('theme');
          if (stored === 'dark') {
            setTheme(true);
            return;
          }
          if (stored === 'light') {
            setTheme(false);
            return;
          }
        } catch (err) {
          // localStorage might be unavailable (e.g., Safari private mode)
          // eslint-disable-next-line no-console
          console.warn('theme init: unable to read localStorage', err);
        }

        const prefersDark =
          typeof window !== 'undefined' &&
          window.matchMedia &&
          window.matchMedia('(prefers-color-scheme: dark)').matches;
        setTheme(prefersDark);
      })();
    </script>
  </head>
  <body
    class="min-h-screen w-full h-full antialiased font-ibmplex text-gray-900 dark:text-gray-100 bg-white dark:bg-neutral-950"
  >
    <SquareLines />
    <Header />
    <slot />
    <Footer />
  </body>
</html>
