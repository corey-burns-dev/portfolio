---
import '../styles/global.css';
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <meta
      name="description"
      content="Personal portfolio of Corey Burns, a software developer specializing in web development and modern technologies."
    />
    <meta name="author" content="Corey Burns" />
    <meta
      name="keywords"
      content="Corey Burns, portfolio, software developer, web development, JavaScript, TypeScript, React, Node.js"
    />
  </head>
  <body class="antialiased bg-white dark:bg-black transition-colors duration-300">
    <slot />
  </body>
</html>
