---
import '../styles/global.css';

const {
  title = 'Corey Burns',
  description = 'Corey Burns - Portfolio',
  ogImage = '/og-image.png',
  ogType = 'website',
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="color-scheme" content="light dark" />
    <meta name="theme-color" content="#ffffff" media="(prefers-color-scheme: light)" />
    <meta name="theme-color" content="#000000" media="(prefers-color-scheme: dark)" />

    <!-- SEO -->
    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={ogType} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:url" content={Astro.url.origin} />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />

    <!-- Icons -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href={Astro.url} />

    <!-- Inline global styles to eliminate render-blocking CSS requests -->
    <style is:inline>
      @import 'tailwindcss';

      /* CSS Variables for theming */
      :root {
        /* Light mode colors */
        --color-bg-primary: 255 255 255;
        --color-bg-secondary: 249 250 251;
        --color-text-primary: 31 41 55;
        --color-text-secondary: 75 85 99;
        --color-text-muted: 107 114 128;
        --color-border: 229 231 235;
        --color-accent: 59 130 246;
        --color-accent-hover: 37 99 235;
      }

      html.dark {
        /* Dark mode colors */
        --color-bg-primary: 17 24 39;
        --color-bg-secondary: 31 41 55;
        --color-text-primary: 243 244 246;
        --color-text-secondary: 209 213 219;
        --color-text-muted: 156 163 175;
        --color-border: 55 65 81;
        --color-accent: 96 165 250;
        --color-accent-hover: 59 130 246;
        color-scheme: dark;
      }

      @layer base {
        /* Smooth scrolling */
        html {
          scroll-behavior: smooth;
        }

        body {
          font-family:
            -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Helvetica Neue', Arial, sans-serif;
          font-size: 1rem;
          line-height: 1.625;
          color: rgb(var(--color-text-primary));
          background-color: rgb(var(--color-bg-primary));
          transition:
            background-color 0.2s ease,
            color 0.2s ease;
        }

        @media (min-width: 768px) {
          body {
            font-size: 1.125rem;
          }
        }

        /* Typography */
        h1,
        h2,
        h3 {
          font-family: 'Palatino Linotype', Palatino, Georgia, 'Times New Roman', serif;
          font-weight: 700;
          letter-spacing: -0.025em;
          color: rgb(var(--color-text-primary));
        }

        h4,
        h5,
        h6 {
          font-family:
            -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Helvetica Neue', Arial, sans-serif;
          font-weight: 600;
          color: rgb(var(--color-text-primary));
        }

        h1 {
          font-size: clamp(2.5rem, 5vw, 3.75rem);
        }

        h2 {
          font-size: clamp(1.75rem, 4vw, 2.25rem);
        }

        h3 {
          font-size: clamp(1.375rem, 3vw, 1.875rem);
        }

        /* Code blocks */
        code,
        kbd {
          font-family: ui-monospace, 'SF Mono', Monaco, 'Cascadia Code', 'Segoe UI Mono', monospace;
          font-size: 0.875rem;
          background-color: rgb(var(--color-bg-secondary));
          border-radius: 0.25rem;
          padding: 0.125rem 0.375rem;
        }

        pre {
          font-family: ui-monospace, 'SF Mono', Monaco, 'Cascadia Code', 'Segoe UI Mono', monospace;
          font-size: 0.875rem;
          background-color: rgb(var(--color-bg-secondary));
          border-radius: 0.375rem;
          padding: 1rem;
          overflow-x: auto;
          white-space: pre-wrap;
          word-break: break-word;
        }

        pre code {
          background-color: transparent;
          padding: 0;
        }

        /* Links */
        a {
          color: rgb(var(--color-accent));
          text-decoration: underline;
          text-decoration-skip-ink: auto;
          transition: color 0.2s ease;
        }

        a:hover {
          color: rgb(var(--color-accent-hover));
        }

        a:focus {
          outline: 2px solid rgb(var(--color-accent));
          outline-offset: 0.25rem;
          border-radius: 0.125rem;
        }

        /* Interactive elements */
        button,
        input,
        select,
        textarea {
          transition:
            background-color 0.2s ease,
            border-color 0.2s ease;
        }

        /* Images */
        img {
          max-width: 100%;
          height: auto;
          display: block;
        }

        /* Utility classes */
        .prose img {
          border-radius: 0.5rem;
        }

        /* Skip to main content link */
        .sr-only {
          position: absolute;
          width: 1px;
          height: 1px;
          padding: 0;
          margin: -1px;
          overflow: hidden;
          clip: rect(0, 0, 0, 0);
          white-space: nowrap;
          border-width: 0;
        }

        .sr-only:focus,
        .focus\:not-sr-only:focus {
          position: static;
          width: auto;
          height: auto;
          padding: inherit;
          margin: inherit;
          overflow: visible;
          clip: auto;
          white-space: normal;
        }
      }
    </style>
  </head>
  <body class="antialiased bg-white dark:bg-black transition-colors duration-300">
    <slot />
  </body>
</html>
