---

---

<header class="flex w-full items-center border-(--soft-border-color) transition">
  <nav class="w-full bg-transparent">
    <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
      <div class="flex h-16 items-center justify-between">
        <!-- Brand -->
        <h2 class="shrink-0">
          <a
            href="/"
            class="flex gap-4 text-xl font-black tracking-wide text-black dark:text-white"
          >
            COREY BURNS
          </a>
        </h2>

        <!-- Desktop nav -->
        <div class="hidden md:flex md:items-center md:space-x-8">
          <a
            href="/about"
            class="text-md font-medium text-gray-700 hover:text-gray-900 dark:text-gray-200"
          >
            About
          </a>
          <a
            href="/skills"
            class="text-md font-medium text-gray-700 hover:text-gray-900 dark:text-gray-200"
          >
            Skills
          </a>
          <a
            href="/projects"
            class="text-md font-medium text-gray-700 hover:text-gray-900 dark:text-gray-200"
          >
            Projects
          </a>
          <a
            href="/contact"
            class="text-md font-medium text-gray-700 hover:text-gray-900 dark:text-gray-200"
          >
            Contact
          </a>
          <!-- Theme toggle (desktop) -->
          <button
            data-theme-toggle
            class="theme-toggle theme-toggle--mobile-floating ml-2"
            type="button"
            aria-label="Toggle color theme"
            aria-pressed="false"
          >
            <span class="sr-only">Toggle color theme</span>
            <!-- Sun icon -->
            <svg
              aria-hidden="true"
              class="icon icon-sun h-5 w-5"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="1.5"
            >
              <circle cx="12" cy="12" r="4"></circle>
              <path
                d="M12 2v2M12 20v2M4.93 4.93l1.41 1.41M17.66 17.66l1.41 1.41M2 12h2M20 12h2M4.93 19.07l1.41-1.41M17.66 6.34l1.41-1.41"
              >
              </path>
            </svg>
            <!-- Moon icon -->
            <svg
              aria-hidden="true"
              class="icon icon-moon h-5 w-5"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="1.5"
            >
              <path d="M21 12.79A9 9 0 1111.21 3 7 7 0 0021 12.79z"></path>
            </svg>
          </button>
        </div>

        <!-- Mobile menu button -->
        <div class="md:hidden">
          <button
            id="nav-toggle"
            aria-label="Toggle navigation"
            class="inline-flex items-center justify-center rounded-md p-2 text-gray-700 hover:text-gray-900 focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 focus:outline-none dark:text-gray-200"
          >
            <svg
              id="nav-open"
              class="h-6 w-6"
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M4 6h16M4 12h16M4 18h16"
              >
              </path>
            </svg>
            <svg
              id="nav-close"
              class="hidden h-6 w-6"
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M6 18L18 6M6 6l12 12"
              >
              </path>
            </svg>
          </button>
        </div>
      </div>
    </div>

    <!-- Mobile menu -->
    <div id="mobile-menu" class="hidden md:hidden">
      <div class="space-y-1 px-2 pt-2 pb-3 sm:px-3">
        <a
          href="/about"
          class="block rounded-md px-3 py-2 text-base font-medium text-gray-700 hover:bg-gray-100 dark:text-gray-200"
        >
          About
        </a>
        <a
          href="/skills"
          class="block rounded-md px-3 py-2 text-base font-medium text-gray-700 hover:bg-gray-100 dark:text-gray-200"
        >
          Skills
        </a>
        <a
          href="/projects"
          class="block rounded-md px-3 py-2 text-base font-medium text-gray-700 hover:bg-gray-100 dark:text-gray-200"
        >
          Projects
        </a>
        <a
          href="/contact"
          class="block rounded-md px-3 py-2 text-base font-medium text-gray-700 hover:bg-gray-100 dark:text-gray-200"
        >
          Contact
        </a>
      </div>
      <div class="border-t border-gray-100 px-3 py-3 dark:border-gray-800">
        <!-- Theme toggle (mobile) -->
        <button
          data-theme-toggle
          class="theme-toggle w-full text-left"
          type="button"
          aria-label="Toggle color theme"
          aria-pressed="false"
        >
          <span class="sr-only">Toggle color theme</span>
          <svg
            aria-hidden="true"
            class="icon icon-sun mr-2 inline-block h-5 w-5"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="1.5"
          >
            <circle cx="12" cy="12" r="4"></circle>
            <path
              d="M12 2v2M12 20v2M4.93 4.93l1.41 1.41M17.66 17.66l1.41 1.41M2 12h2M20 12h2M4.93 19.07l1.41-1.41M17.66 6.34l1.41-1.41"
            >
            </path>
          </svg>
          <svg
            aria-hidden="true"
            class="icon icon-moon mr-2 inline-block h-5 w-5"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="1.5"
          >
            <path d="M21 12.79A9 9 0 1111.21 3 7 7 0 0021 12.79z"></path>
          </svg>
          <span>Dark mode</span>
        </button>
      </div>
    </div>

    <script type="module" is:inline>
      const btn = document.getElementById('nav-toggle');
      const menu = document.getElementById('mobile-menu');
      const openIcon = document.getElementById('nav-open');
      const closeIcon = document.getElementById('nav-close');

      if (btn) {
        btn.addEventListener('click', () => {
          const isHidden = menu.classList.toggle('hidden');
          openIcon.classList.toggle('hidden');
          closeIcon.classList.toggle('hidden');
          // When showing menu, remove hidden class (menu visible when hidden === false)
          if (!isHidden) {
            menu.classList.remove('hidden');
          } else {
            menu.classList.add('hidden');
          }
        });
      }
    </script>
  </nav>
</header>
